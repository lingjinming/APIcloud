/* 发布任务的页面样式 */

body {
    background: #f4f4f4 !important;
}

.info-wrap {
    /* padding-top: 20px; */
    position: relative;
}

.info-con {
    background: #ffffff;
    margin-bottom: 10px;
}

.marb50 {
    margin-bottom: 50px;
}

.info-title {
    color: #333333;
    font-size: 16px;
    font-weight: 400;
    padding-left: 20px;
    height: 45px;
    line-height: 45px;
    padding-right: 20px;
}

.info-con-items {
    position: relative;
    height: 45px;
    line-height: 45px;
    margin: 0 20px;
}

.info-con-items2 {
    height: auto;
    line-height: 1.2;
    /* margin: 0 20px; */
    padding: 15px 0;
}

.info-con-items span,
.info-con-items2 span {
    float: left;
    width: 100px;
    color: #333;
}

.info-con-items .float-r {
    width: calc(100% - 100px);
    text-align: right;
}

.info-con-items input {
    text-align: right;
    height: 45px;
    line-height: 45px;
    font-size: 15px;
    width: calc(100% - 40px)
}

textarea {
    width: calc(100% - 100px);
}

.circle {
    width: 20px !important;
    height: 20px !important;
    line-height: 20px !important;
    border-radius: 50%;
    text-align: center;
    background: #1cbb9e;
    color: #ffffff !important;
    margin-right: 10px;
}

.confirm-publish-btn {
    width: 100%;
    height: 50px;
    line-height: 50px;
    text-align: center;
    font-size: 16px;
    background: #1cbb9e;
    color: #ffffff;
    position: fixed;
    bottom: 0;
    z-index: 222222；
}

.step-box {
    padding-bottom: 20px;
    box-sizing: content-box;
}

.step-box-tit {
    /* height: 50px; */
    padding-top: 10px;
    min-height: 50px;
    line-height: 30px;
    font-size: 15px;
    box-sizing: content-box;
    /* padding-left: 20px; */
}

.step-box .info-con-items {
    margin: 0 !important;
}

.img-upload {
    position: relative;
    width: calc((100% - 100px) / 3);
    margin-left: 25px;
}

.img-upload img {
    width: 100%;
    height: 100%;
}

.img-box>div img {
    width: 150px;
    height: 150px;
}

.deleteimg {
    position: absolute;
    right: -8px;
    top: -8px;
    width: 20px !important;
    height: 20px !important;
    border-radius: 50%;
    line-height: 20px;
    background: rgba(0, 0, 0, .5);
    color: #ffffff;
    text-align: center;
    display: none
}

.info-con-upload-items {
    margin: 0 20px;
}


/* 时间选择样式重置 */

.date_btn_box {
    background: #f0f0f0 !important;
}

.date_btn {
    font-size: 16px !important;
    font-weight: 400 !important;
}

.lcalendar_cancel {
    color: #666 !important;
}

.lcalendar_finish {
    color: #1cbb9e!important;
}

.ym_roll>div,
.date_roll>div,
.datetime_roll>div,
.time_roll>div {
    font-size: 16px !important;
    height: 10em !important;
    float: left;
    background-color: transparent;
    position: relative;
    overflow: hidden;
    -webkit-box-flex: 4;
    font-weight: 400 !important;
}

.date_grid {
    top: 4em !important;
}

.ym_roll>div .gear,
.date_roll>div .gear,
.datetime_roll>div .gear,
.time_roll>div .gear {
    margin-top: -4em !important;
}

.ym_roll,
.date_roll,
.datetime_roll,
.time_roll {
    background: #ffffff !important;
}

.bigimg {
    width: 45%;
}


/* 我的赏单 */

.myrewardList {
    background: #f4f4f4;
}

.myrewardList li {
    position: relative;
    padding: 0 20px;
    border-top: 1px solid #ddd;
    background: #ffffff;
}

.myrewardList li:first-child {
    border-top: none;
}

.myrewardList li img {
    width: 40px;
    height: 40px;
    margin-right: 10px
}

.myrewardList .info-wrap p {
    height: 33px;
    line-height: 33px;
}

.btn-wrap {
    height: 55px;
    line-height: 55px;
    text-align: right;
}

.btn-wrap .btn {
    width: 85px;
    height: 30px;
    line-height: 30px;
    color: #fff;
    background: #fff;
    border: 1px solid #1cbb9e;
    color: #1cbb9e;
    border-radius: 30px;
    margin-left: 15px;
}

.btn-wrap .orange-color {
    background: #fff;
    color: orange;
    border: 1px solid orange
}